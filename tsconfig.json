{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2023", "DOM"],
    "jsx": "react",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.tsx",
    "packages/stash-ui/stash/**/*"
  ],
  "include": [
    "packages/tv-ui/**/*",
    "packages/tv-plugin/**/*",
    "packages/stash-ui/wrappers/**/*"
  ]
}
